pipeline {
    agent { 
        node {
            label 'slave'
            }
     }
    environment {
	PATH = "/home/$USER/jenkins_slave/workspace/my_first_pipeline/file_log"
    }

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                sh '''
                echo "Building..... $(date)" >> ${env.PATH}
                '''
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
		sh '''
		echo "Testing....." >> ${env.PATH}
		'''
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
		sh '''
		echo "Deploying....." >> ${env.PATH}
		'''
            }
        }
    }
}                   

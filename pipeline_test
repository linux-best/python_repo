pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                sh '''
                echo "Building....." >> /var/lib/jenkins/workspace/my_first_pipeline/file_log
                '''
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
		sh '''
		echo "Testing....." >> /var/lib/jenkins/workspace/my_first_pipeline/file_log
		'''
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
		sh '''
		echo "Deploying....." >> /var/lib/jenkins/workspace/my_first_pipeline/file_log
		'''
            }
        }
    }
}                   
